{
  "extends": [
    "eslint-config-airbnb",
    "plugin:vue/recommended"
  ],
  "globals": {
    "document": "readonly"
  },
  "rules": {
    "func-names": "off",
    "indent": [
      "error",
      4
    ],
    "max-len": "off",
    "no-trailing-spaces": "off",
    "no-multi-str": "off",
    "radix": "off",
    "linebreak-style": "off",
    "no-tabs": "off",
    "comma-dangle": "off",
    "import/no-unresolved": "off",
    "prefer-template": "off",
    "vue/max-attributes-per-line": ["error", {
      "singleline": 3,
      "multiline": {
        "max": 1,
        "allowFirstLine": true
      }
    }],
    "vue/html-self-closing": "off",
    "vue/script-indent": [
      "error",
      4,
      {
        "baseIndent": 1
      }
    ],
    "vue/html-indent": [
      "error",
      "tab",
      {
        "baseIndent": 1
      }
    ]
  },
  "overrides": [
    {
      "files": [
        "*.vue"
      ],
      "rules": {
        "indent": "off"
      }
    }
  ]
}
